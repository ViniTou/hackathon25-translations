{
    "name": "ibexa/hackathon-translations",
    "license": "proprietary",
    "type": "ibexa-bundle",
    "keywords": [
        "ibexa-dxp"
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://updates.ibexa.co"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "symfony/config": "^7.3",
        "symfony/dependency-injection": "^7.3",
        "symfony/event-dispatcher": "^7.3",
        "symfony/form": "^7.3",
        "symfony/http-foundation": "^7.3",
        "symfony/http-kernel": "^7.3",
        "symfony/yaml": "^7.3",
        "ibexa/core": "^5.0",
        "ibexa/connector-ai": "^5.0",
        "ibexa/connector-openai": "^5.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^9",
        "deptrac/deptrac": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Ibexa\\Bundle\\HackathonTranslations\\": "src/bundle/",
            "Ibexa\\HackathonTranslations\\": "src/lib/"
        }
    },
    "scripts": {
        "fix-cs": "php-cs-fixer fix --config=.php-cs-fixer.php --show-progress=dots",
        "check-cs": "@fix-cs --dry-run",
        "test": "phpunit -c phpunit.xml.dist",
        "phpstan": "phpstan analyse -c phpstan.neon"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": false
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
